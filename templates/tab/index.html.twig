{% extends "Template.html.twig" %}

{% block title %}
    Notes
{% endblock %}

{% block pageTitle %}
    Tableau de notes
{% endblock %}

{% block body %}
    <table class="table">
        {% for note in notes %}
        <tr>
            <td>{{note}}</td>
        </tr>
        {% endfor %}
    </table>
    <div class="alert alert-info" >
        <p>Nombre de notes : {{notes|length}}</p>
        <p>notes max: {{max(notes)}}</p>
        <p>notes min: {{min(notes)}}</p>
    </div>
{% endblock %}
