{% extends 'Template.html.twig' %}

{% block title %}
    Users
{% endblock %}

{% block pageTitle %}
    Liste des users
{% endblock %}

{% block body %}
    {{ include('fragments/date.html.twig') }}
    <div class="alert alert-warning">
        <a href="{{ path('app_tab', {nb : 7}) }}">stats table</a>
    </div>
    <table class="table">
        <tr class="table-active">
            <td>Firstname</td>
            <td>Name</td>
            <td>Age</td>
            <td>Message</td>
        </tr>
        {% for user in users %}
        <tr class="table-{% if loop.index is even %}danger{% else %}warning{% endif %}">
            <td>{{ user.firstname }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.age }}</td>
            <td>{{ render (controller('App\\Controller\\FirstController::sayHello', {firstname:user.firstname, name:user.name })) }}</td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
